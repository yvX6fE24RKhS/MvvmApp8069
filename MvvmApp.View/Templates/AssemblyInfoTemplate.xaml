<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ref="clr-namespace:System.Reflection;assembly=mscorlib"
                    xmlns:vm="clr-namespace:MvvmApp.ViewModel;assembly=MvvmApp.ViewModel"
                    >
   <DataTemplate x:Key="AssembliesTemplate">
      <DataGrid   x:Name="dgAssemblies"
                  ItemsSource="{Binding Path=Assemblies}" 
                  AutoGenerateColumns ="False"
                  CanUserAddRows="False"
                  HorizontalAlignment="Left"
                  BorderThickness="2"
                  BorderBrush="Green"
                  >
         <DataGrid.Columns>
            <DataGridTextColumn Header="Сборка" Binding="{Binding Name}" Width="SizeToCells" IsReadOnly="True"/>
            <DataGridTextColumn Header="Версия" Binding="{Binding Version}" Width="SizeToCells" IsReadOnly="True"/>
         </DataGrid.Columns>
      </DataGrid>
   </DataTemplate>
</ResourceDictionary> 
